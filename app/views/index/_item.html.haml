%li{ :class => "item_element#{'_cart' if params[:controller] == 'carts' && params[:action] == 'index'}" }
  %h3.item_number= item.item_num
  %p= link_to image_tag(item.medium_image), send("#{item.class.to_s.downcase}_url", item.is_a?(Product) ? {:item_num => item.item_num, :name => item.name.parameterize} : {:idea_num => item.idea_num, :name => item.name.parameterize} )
  %p= link_to item.name, send("#{item.class.to_s.downcase}_url", item.is_a?(Product) ? {:item_num => item.item_num, :name => item.name.parameterize} : {:idea_num => item.idea_num, :name => item.name.parameterize})
  - if item.class == Product
    %p= display_product_price(item)
  - if item.is_a?(Product) && params[:controller] == 'carts' && params[:action] == 'index'
    .cart-buttons= add_to_cart_button(item)