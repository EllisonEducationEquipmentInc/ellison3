.breadcrumbs
  = link_to_function 'back', "window.history.back()"
.product_images
  #large_image= image_tag(@product.large_image)
  .thumbnail.selected= link_to image_tag(@product.small_image), '#', :onmouseover => "$('#large_image').html('#{image_tag(@product.large_image)}').shadowOn();return false;"
  - @product.images.each do |image|
    .thumbnail= link_to image_tag(image.image_url(:small)), '#', :onmouseover => "$('#large_image').html('#{image_tag(image.image_url(:large))}').shadowOn();return false;"
  .clear  
%h3.product_title
  = @product.name
  %span.life-cycle= @product.public_life_cycle
.product_sociallinks= facebook_like
.product_buybox.rounded
  %h4.itemnumber
    Item #
    = @product.item_num
  %h4= display_product_price(@product)
  = add_to_cart_button(@product)
    
%p= @product.description.try :html_safe

.product_moreinfo
  = image_tag("http://placehold.it/470x150")
  %h4 Keywords:
  %p
    = link_to "flower", "#"
    , 
    = link_to "blue", "#"
    , 
    = link_to "Christmas", "#"
    , 
    = link_to "Deena Ziegler", "#"
    , 
    = link_to "Big Shot Pro", "#"
    , 
    = link_to "felt", "#"
    
.product_tabs= render :partial => 'tab_block', :locals => {:object => @product}