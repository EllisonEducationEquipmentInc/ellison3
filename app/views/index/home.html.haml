- if machines_owned.blank?
  #machines_owned.floating_survey{:style => "position:absolute;padding:10px;border:1px solid gray;background:white;z-index:9999;"}
    .right= link_to_function "close", "$('#machines_owned').remove()"
    %h2 Help us serve you better - Which machines do you currently own?
    = form_tag "/index/machines_survey", :remote => true do
      - MACHINES.each do |k,v|
        = check_box_tag 'machines[]', k
        = v
        %br
      = submit_tag "Submit", :replace_with => "please wait...", :class => 'jqui_save'
    
- if @home_content.present?
  #current_visual_assets= render @home_content.visual_assets.current
  .clear
  - @home_content.visual_assets.billboards.each do |billboard|
    %div{:class => "billboard_#{billboard.wide ? 'medium' : 'XS'} #{'last' if @home_content.visual_assets.billboards.last == billboard}"}
      .captionfull{:class => "boxgrid#{billboard.wide ? '-large' : nil}"}
        = image_tag(billboard.image_url) if billboard.image?
        .cover{:class => "boxcaption#{billboard.wide ? '-large' : nil}"}
          %h4= billboard.name
          %div
            = billboard.content.html_safe
            - if billboard.link.present?
              %br/
              = link_to "more", billboard.link

- unless is_er? || is_ee?
  #blog-posts
    %h2.decorative
      %span News from our Blog  
    %ul#blog_feeds= spinner
    .poll
      %h4 Take This Month's Poll!
      %p
        Which Sizzix Machines do you currently own? 
        = link_to "launch poll", "#"

  #social-media
    %h2.decorative
      %span Sizzix Tweets
    = javascript_include_tag 'http://widgets.twimg.com/j/2/widget.js'
    :javascript
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 5,
        interval: 6000,
        width: 'auto',
        height: 300,
        theme: {
          shell: {
            background: '#243250',
            color: '#ffffff'
          },
          tweets: {
            background: '#040f28',
            color: '#ffffff',
            links: '#03D2F7'
          }
        },
        features: {
          scrollbar: false,
          loop: false,
          live: false,
          hashtags: true,
          timestamp: true,
          avatars: false,
          behavior: 'all'
        }
      }).render().setUser('sizzix_#{ is_us? ? "us" : "uk" }').start();

    %ul#connect-with-sizzix
      %li= link_to "Follow Us on Twitter", "http://www.twitter.com/sizzix_#{ is_us? ? "us" : "uk" }", :target => "blank", :class => "link_twitter"
      %li= link_to "Join Us on Facebook", "http://www.facebook.com/Sizzix", :target => "blank", :class => "link_facebook"
      - if is_sizzix_us?
        %li= link_to "Read Our Blog", "http://sizzixblog.blogspot.com/", :target => "blank", :class => "link_blogspot"
      %li= link_to "Watch Us on YouTube", "http://www.youtube.com/sizzix", :target => "blank", :class => "link_youtube"
      %li= link_to "Sign Up for our Newsletter", "#", :target => "blank", :class => "link_newsletter"
      %li= link_to "Email Us", "/contact", :class => "link_contact"
  :javascript
    $(document).ready(function(){
      $('#sizzix_tweets').load('/index/twitter_feed#{"_uk" if is_uk?}');
      $('#blog_feeds').load('/index/blog_feed#{"_uk" if is_uk?}');
    });