%li.ui-menu-item{:id => "product_#{product.id}"}
  .item-links
    = link_to_function "x", "$('#product_#{product.id}').css('color', 'gray');$.ajax({url:'/admin/tags/remove_product?product_id=#{product.id}&id=#{tag_id}'})", :class => "remove_product", :alt => "remove product", :title => "remove product"
    = link_to 'Show Product', admin_product_path(product.id), :class => "show_product", :alt => "show product", :title => "show product"
  .item-name
    == ##{product.item_num} - #{product.name}
    =# hidden_field_tag "tag[my_product_ids][]", product.id