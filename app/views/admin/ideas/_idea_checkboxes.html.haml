= link_to_function "add all visible", "$(this).parent().find('[type=checkbox][checked=false]:visible').attr('checked', true).each(function (i) {check_items_to_item_num_field(this, 'idea')})", :class => "link_add-all"
.admin_checkboxes
  - @ideas.each do |idea|
    %div{:class => "idea_helper_check_box_row #{idea.tag_ids * ' '}"}
      = check_box_tag "idea_helper", idea.item_num, false, :class => "idea_helper_check_box", :id => nil, :onchange => "check_items_to_item_num_field(this, 'idea')"
      = image_tag(idea.small_image, :size => "12x12", :onmouseover => "$(this).css({'height': '65px', 'width': '65px', 'position': 'absolute', 'z-index': 99})", :onmouseout => "$(this).css({'height': '12px', 'width': '12px', 'position': 'relative', 'z-index': 1})")
      = "#{idea.idea_num} #{idea.name}"
      %br