%li.ui-menu-item{:id => "tag_#{tag.id}"}
  .left
    = link_to_function "x", "$('#tag_#{tag.id}').css('color', 'gray');$.ajax({url:'/admin/ideas/remove_tag?tag_id=#{tag.id}&id=#{idea_id}'})", :class => "remove_tag", :alt => "remove tag", :title => "remove tag"
    = link_to 'Show Tag', admin_tag_path(tag.id), :class => "show_idea", :alt => "show tag", :title => "show tag"
  .systems_enabled== #{tag.systems_enabled.join(", ")}
  .left
    = link_to tag.name, edit_admin_tag_path(tag), :style => "color:#{tag.displayable? ? 'green' : 'red'}", :title => "Edit tag"
    %span.keyword== (#{tag.tag_type.humanize})
  .clear