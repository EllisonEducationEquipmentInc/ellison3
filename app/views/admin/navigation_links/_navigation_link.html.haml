-#.navigation_link{:style => "border:1px solid gray;margin-bottom:5px;"}
.navigation_link
  .field
    = f.label :label, "Link Label", :class => "w83"
    = f.text_field :label
  .field
    = f.label :link, "Link URL", :class => "w83"
    = f.text_field :link
  .field.right
    = f.check_box :_destroy
    = f.label :_destroy, "Mark this Link for Deletion", :class => "autosize"
.clear