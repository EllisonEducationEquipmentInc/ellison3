%h1 Listing admins
= link_to 'New admin user', new_admin_admin_path, :class => 'jqui_new'
%br
- unless params[:q].blank?
  = link_to 'all', admin_admins_path, :class => 'jqui_button'
- form_tag(admin_admins_path, :method => :get) do
  = text_field_tag :q
  = submit_tag "search", :class => 'jqui_search'
%table
  %thead
    %tr
      %th Active
      %th Email
      %th Signed in
      %th Last sign in at
      %th Created At
      %th Failed attempts
      %th &nbsp;
      %th &nbsp;
      %th &nbsp;
  %tbody
    - for user in @admins
      %tr{ :class => cycle(:odd, :even) }
        %td= user.active
        %td= user.email
        %td= user.sign_in_count
        %td= l user.current_sign_in_at, :format => :custom rescue ''
        %td= l user.created_at, :format => :custom rescue ''
        %td= user.failed_attempts
        %td= link_to 'Edit', edit_admin_admin_path(user)
        %td= link_to 'Deactivate', admin_admin_path(user), :confirm => 'Are you sure?', :method => :delete
%br
= will_paginate @admins
%br
= link_to 'New admin user', new_admin_admin_path, :class => 'jqui_new'