!!!
/admin layout
%html
  %head
    %title Ellison Global administration
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = stylesheet_link_tag 'compiled/admin.css', :media => 'all'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    =# javascript_include_tag :defaults
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", "jquery.rails.js", 'jquery-ui-1.8.2.custom.min.js', 'jquery-ui-timepicker-addon-0.5', 'wymeditor/jquery.wymeditor.min.js'
    = stylesheet_link_tag 'ui-lightness/jquery-ui-1.8.2.custom.css', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body.bp
    #wrapper.bp
      = yield