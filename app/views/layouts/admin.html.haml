-# GLOBAL LAYOUT for the ELLISON3 WEB APPLICATION CONTENT MANAGEMENT SYSTEM

!!!
%html
  %head
    %title Ellison Global administration
    = render 'layouts/common_head'
    = stylesheet_link_tag 'compiled/admin', :media => 'all'
  %body.bp
    #container
      #header
        %h1 Admin 
        - if admin_signed_in?
          .right
            = link_to "Edit My Profile", edit_admin_registration_path(current_admin)
            |
            = link_to "Log out", destroy_session_path('admin')
        = link_to "Products", admin_products_path
        |
        = link_to "Users", admin_users_path
        |
        = link_to "Profiles", admin_admins_path
      #wrapper.bp
        - if notice
          %p.dontprint.notice= notice 
        = yield