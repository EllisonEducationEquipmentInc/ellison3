-# logo masthead & branding
%h1= link_to system_name, root_path, :id => "logo_masthead", :title => system_name, :alt => system_name
-# utility navigation menu (account management, shopping cart, etc)  
%ul.nav_utility
  %li= link_to_unless params[:controller] == "carts", "<span>View #{(t :cart).capitalize}</span>".html_safe, '#', :class => "show_cart btn-masthead btn-view#{t :cart}", :title => "View #{(t :cart).capitalize}", :alt => "View #{(t :cart).capitalize}"
  - if user_signed_in?
    %li= link_to_unless_current "<span>My Account".html_safe, myaccount_path, :class => "btn-masthead btn-myaccount", :title => "My Account", :alt => "My Account"
    %li= link_to "<span>Sign Out</span>".html_safe, destroy_session_path('user'), :class => "btn-masthead btn-signout", :title => "Sign Out", :alt => "Sign Out" 
  - else
    %li= link_to "<span>Sign In</span>".html_safe, {:controller => 'users', :action => 'signin_signup'}, :class => "lightbox btn-masthead btn-signin", :title => "Sign In", :alt => "Sign In"
  - if admin_signed_in?
    %li= link_to "<span>Edit Admin Profile</span>".html_safe, edit_admin_registration_path(current_admin), :class => "btn-masthead btn-myaccount", :title => "Edit Admin Profile", :alt => "Edit Admin Profile"
    %li= link_to "<span>Log Out Dashboard</span>".html_safe, destroy_session_path('admin'), :class => "btn-masthead btn-admin-logout", :title => "Log Out Dashboard", :alt => "Log Out Dashboard"
  - else
    %li= link_to "<span>Log In Dashboard</span>".html_safe, new_session_path('admin'), :class => "btn-masthead btn-admin-login", :title => "Log In Dashboard", :alt => "Log In Dashboard"

-# Ellison3 dashboard menu for admins + catalog mega-nav menus for consumers
- if admin_signed_in?
  = link_to "Products", admin_products_path
  |
  = link_to "Users", admin_users_path
  |
  = link_to "Profiles", admin_admins_path
  .right
    Switch to:
    - (ELLISON_SYSTEMS & current_admin.systems_enabled).each do |sys|
      = link_to_unless current_system == sys, sys, "?system=#{sys}"
- else
  %p
    catalog navigation will go here...