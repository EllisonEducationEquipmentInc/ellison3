%ul.nav_utility
  %li= link_to "<span>View #{(t :cart).capitalize}</span".html_safe, '#', :class => "show_cart btn-masthead btn-view#{t :cart}", :title => "View #{(t :cart).capitalize}", :alt => "View #{(t :cart).capitalize}"
  - if user_signed_in?
    %li= link_to "<span>Sign Out</span".html_safe, destroy_session_path('user'), :class => "btn-masthead btn-signout", :title => "Sign Out", :alt => "Sign Out"
    %li= link_to "<span>My Account</span".html_safe, myaccount_path, :class => "btn-masthead btn-myaccount", :title => "My Account", :alt => "My Account"
  - else
    %li= link_to "<span>Sign In</span".html_safe, new_session_path('user'), :class => "btn-masthead btn-signin", :title => "Sign In", :alt => "Sign In"
  - if admin_signed_in?
    %li= link_to "<span>Log Out Dashboard</span".html_safe, destroy_session_path('admin'), :class => "btn-masthead btn-admin-logout", :title => "Log Out Dashboard", :alt => "Log Out Dashboard"
  - else
    %li= link_to "<span>Log In Dashboard</span".html_safe, new_session_path('admin'), :class => "btn-masthead btn-admin-login", :title => "Log In Dashboard", :alt => "Log In Dashboard"