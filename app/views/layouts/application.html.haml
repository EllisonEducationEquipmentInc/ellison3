!!!
/default szus layout
%html
  %head
    %title 
      = get_domain
      \-
      = @title
    = render 'layouts/common_head'
  %body.bp
    #header
      = image_tag "ui-logos/szus.gif"
      .show_cart= "View #{t :cart}"
    #cart{:style => "display:none"}
    #wrapper.bp
      - if notice
        %p.dontprint.notice= notice 
      = yield