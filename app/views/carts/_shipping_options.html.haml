- unless get_cart.shipping_rates.blank?
  %ul.plain
    - get_cart.shipping_rates.sort {|x,y| x["rate"] <=> y["rate"]}.each do |rate|
      %li
        = radio_button_tag :shipping_service, rate["type"], rate["type"] == get_cart.shipping_service, :onclick => "$.ajax({beforeSend: function() {$('#payment_submit').button({disabled: true, label: 'please wait...'});$('#deferred_single_total_amount').html('#{escape_javascript loader_bar}');$('#deferred_first_payment').html('#{escape_javascript loader_bar}');$('#total_amount').html('#{escape_javascript loader_bar}');$('#shipping_amount').html('#{escape_javascript loader_bar}');$('#tax_amount').html('#{escape_javascript loader_bar}');}, url:'/carts/change_shipping_method?method='+this.value});"
        == #{rate["name"]}:
        %span.right= number_to_currency gross_price(rate["rate"])
        - unless rate["delivered_by"].blank?
          %br
          %span.minilink{:style => "padding-left:24px"}== Estimated delivery: #{l rate["delivered_by"], :format => :date}
- else
  = loader_bar