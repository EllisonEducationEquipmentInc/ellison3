- if user_signed_in?
  == $("#cart_item_#{@cart_item_id}").remove();
  == $('#cart_subtotal').html('#{number_to_currency gross_price(get_cart.sub_total)}');
  == $('#shoppingcart_info').html('#{escape_javascript(render(:partial => "carts/shopping_cart"))}');
  == $('#cart_container').html('#{escape_javascript(render(:partial => "carts/cart"))}');
  == $('#save_list').html('#{escape_javascript(render(:partial => "carts/saved_list"))}');
- else
  $.fancybox({
  'padding'		: 10,
  'autoScale'		: false,
  'speedIn'		:	500, 
  'speedOut'		:	200,
  'width'	: 860,
  'title'			: false,
  'content'	: '#{escape_javascript(render(:partial => "login_or_checkout"))}'
  });
  setTimeout("$.fancybox.resize()", 600);