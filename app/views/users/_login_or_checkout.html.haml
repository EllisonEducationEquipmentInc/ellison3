- if @message
  .error= @message
#returning_customer
  %h2 I'm A Returning Customer 
  = form_for(resource, :as => "existing_#{resource_name}", :url => session_path(resource_name, :secure => true)) do |f|
    = render :partial => 'users/sessions/form', :locals => {:f => f}
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    = link_to "Forgot your password?", new_password_path(resource_name)
    %br/
#guest_checkout
  %h2 I'm A New Customer 
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name, :secure => true)) do |f|
    = render :partial => "form", :locals => {:f => f}
:javascript
  initialize_buttons();
  $(document).ready(function(){$("#existing_user_email").focus();});