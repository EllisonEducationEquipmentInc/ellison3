- if store.logo.present? && File.exists?("#{Rails.root}/public/#{store.logo}")
  = image_tag(store.logo)
  %br
- if store.excellence_level.present?
  %h3.map-link{ :class => "icon_excellence-level_#{store.excellence_level.parameterize}", :alt => "#{store.excellence_level}", :title => "#{store.excellence_level}" }= store.name
- else
  %h3.map-link= store.name
%p
  - store.product_line.each do |product_line|
    = link_to product_line, "/catalog#q=#{product_line}", :class => "icon_brand-#{product_line.parameterize}", :alt => "#{product_line}", :title => "#{product_line}"
%p
  = store.address1
  - unless store.address2.blank?
    = store.address2
  %br
  == #{store.city}, #{store.state} #{store.zip_code}
  %br
  = store.country
  %br
  = link_to store.website, store.website, :target => '_blank' if store.website.present?
- if @zip_geo.present?
  %p= link_to 'Get Directions', "http://maps.google.com/maps?saddr=#{@zip_geo.lat},#{@zip_geo.lng}&daddr=#{store.address1} #{store.city} #{store.state} #{store.zip_code} #{store.country}", :target => '_blank'
