.item-block_related.product{:class => "product_#{product.id}"}
  %h3.item_number= product.item_num
  - if outlet?
    .life-cycle
      %span== Save #{product.saving}%
  - elsif !product.public_life_cycle.blank?
    .life-cycle
      %span= product.public_life_cycle
  %p.item_image= link_to image_tag(product.medium_image), product_url(:id => product), :class => outlet? ? 'lightbox' : nil
  %p.item_name= link_to product.name.html_safe, product_url(:id => product), :class => outlet? ? 'lightbox' : nil
  %p.item_price= display_product_price(product)
